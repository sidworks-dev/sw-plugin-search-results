<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Sidworks Search Results Configuration</title>

        <input-field type="bool">
            <name>suggestSearchEnabled</name>
            <label>Enable Ajax Search Results save</label>
            <helpText lang="en-GB">Enables ajax search results logging</helpText>
            <defaultValue>false</defaultValue>
        </input-field>

        <input-field type="int">
            <name>minStringLength</name>
            <label lang="en-GB">Minimum Search Term Length</label>
            <helpText lang="en-GB">Minimum number of characters required to track a search term</helpText>
            <defaultValue>2</defaultValue>
            <required>true</required>
        </input-field>

        <input-field type="int">
            <name>maxStringLength</name>
            <label lang="en-GB">Maximum Search Term Length</label>
            <helpText lang="en-GB">Maximum number of characters allowed in a search term</helpText>
            <defaultValue>255</defaultValue>
            <required>true</required>
        </input-field>
    </card>

</config>
